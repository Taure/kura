{erl_opts, [debug_info, warnings_as_errors]}.

{deps, [
    {pgo, "~> 0.14"}
]}.

{project_plugins, [
    erlfmt,
    rebar3_hex,
    rebar3_ex_doc
]}.

{erlfmt, [write]}.

{profiles, [
    {test, [
        {erl_opts, [nowarn_export_all]},
        {deps, []}
    ]}
]}.

{dialyzer, [
    {warnings, [
        error_handling,
        unmatched_returns
    ]},
    {plt_extra_apps, [pgo]}
]}.

{hex, [{doc, #{provider => ex_doc}}]}.

{ex_doc, [
    {source_url, <<"https://github.com/Taure/kura">>},
    {extras, [<<"README.md">>, <<"LICENSE">>]},
    {main, <<"README.md">>},
    {homepage_url, <<"https://github.com/Taure/kura">>},
    {api_reference, true}
]}.
